<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jcc.seven.Main">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/localbrowser_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/localbrowser_button"
            android:onClick="buttonLocalBrowserClick"/>
        <Button android:id="@+id/translate_button"
            android:text="T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTranslateClick"/>
        <Button android:id="@+id/location_button"
            android:text="L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonLocationClick"/>
        <Button android:id="@+id/map_button"
            android:text="M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonMapClick"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button android:id="@+id/sql_button"
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonSqlClick"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HERE"
            android:clickable="false" />
        <EditText android:id="@+id/url_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:lines="1"
            android:inputType="textUri"
            android:imeOptions="actionGo"/>
        <Button android:id="@+id/go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_button"
            android:onClick="buttonGoClick"/>
    </LinearLayout>
    <WebView android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />
</LinearLayout>
